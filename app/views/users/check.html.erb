<div class="mein-wrapper">
  <div class="container">
    <div class="page-title">
        <h1>登録内容の確認</h1>
    </div>

    <%= form_with url: user_path, method:"post" do |form| %>

      <div class="text-box">
        <div class="title"><%=form.label :お名前 %></div>
          <p><input name="お名前" value="<%= @user.name %>"></p>
        </div>

      <div class="text-box">
          <div class="title"><%=form.label :メールアドレス %></div>
            <p><input name="メールアドレス" value="<%= @user.email %>"></p>
      </div>

      <div class="text-box">
        <div class="title"><%=form.label :パスワード  %></div>
          <p><input name="パスワード" value="<%= @user.password %>"></p>
      </div>

      <div class="btn-wrapper">
        <p>こちら内容で登録してよろしいですか？</p>
        <%= form.submit "登録する"%>
        <a class="btn" href="/user/new">修正する</a>
      </div>
    <% end %>


  </div>
</div>    