<div class="mein-wrapper">
<div class="container">
    <div class="page-title">
        <h1>ユーザー編集</h1>
    </div>
    <%= form_with url: user_path do |form| %>

        <div class="form">
            <div class="form-title">
                <%=form.label :お名前 %><span class="red">(必須)</span><br>
            </div>
            <%=form.text_field :お名前 %>
        </div>
        <div class="form">
            <div class="form-title">
                <%=form.label :メールアドレス %><span class="red">(必須)</span><br>
            </div>
            <%=form.email_field :メールアドレス %>
        </div>
        <div class="form">
            <div class="form-title">
                <%=form.label :パスワード %><span class="red">(必須)</span><br>
            </div>
            <%=form.password_field :パスワード %>
        </div>
        <div class="form">
            <div class="form-title">
                <%=form.label :パスワード（確認） %><span class="red">(必須)</span><br>
            </div>
            <%=form.password_field :パスワード（確認） %>
        </div>



        <div class="btn-wrapper">
          <a class="btn t" href="#">ホーム画面へ戻る</a>
          <a class="btn" href="#">編集する</a>
        </div>
    <% end %>
    
</div>
</div>